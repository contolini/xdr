{
  "name": "xdr",
  "description": "Cross-browser and cross-domain ajax implementation",
  "version": "0.4.2",
  "stability": "unstable",
  "author": "muji <noop@xpm.io>",
  "main": "lib/ajax.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/socialally/xdr.git"
  },
  "devDependencies": {
    "browser-sync": "~2.8.2",
    "browserify": "~11.0.1",
    "chai": "~3.2.0",
    "del": "~1.2.0",
    "express": "~3.4.0",
    "gulp": "~3.9.0",
    "gulp-eslint": "~1.0.0",
    "gulp-istanbul-report": "0.0.1",
    "gulp-mocha-phantomjs": "~0.8.1",
    "gulp-size": "~1.2.1",
    "gulp-sourcemaps": "~1.5.2",
    "gulp-uglify": "~1.2.0",
    "gulp-util": "~3.0.4",
    "istanbul": "~0.3.6",
    "merge": "~1.2.0",
    "mocha": "~2.2.5",
    "mocha-phantomjs-istanbul": "~0.0.2",
    "require-dir": "~0.3.0",
    "run-sequence": "~1.1.2",
    "vinyl-buffer": "~1.0.0",
    "vinyl-source-stream": "~1.1.0"
  },
  "scripts": {
    "docs": "npm run readme",
    "readme": "mdp --force -v",
    "start": "node server.js",
    "lint": "gulp lint",
    "clean": "gulp clean",
    "spec": "gulp spec",
    "instrument": "istanbul instrument --output instrument lib/",
    "precover": "npm run pretest",
    "postcover": "npm run posttest",
    "cover": "npm run instrument && gulp cover",
    "pretest": "node ./server.js &",
    "posttest": "kill `cat server.pid` && rm server.pid",
    "test": "gulp test"
  },
  "mdp": {
    "title": "Cross Domain Ajax",
    "pedantic": true,
    "include": "doc/readme",
    "require": "lib",
    "links": "links.md",
    "toc": "Table of Contents",
    "base": "https://github.com/socialally/xdr",
    "partial": [
      {
        "ref": "stability",
        "format": "> `Stability: %s`"
      },
      {
        "inc": [
          "introduction.md",
          "install.md",
          "design.md",
          "api.md",
          "developer.md",
          "appendix.md"
        ]
      }
    ]
  },
  "license": "MIT"
}
